<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_marginTop="8dp"

    android:layout_marginStart="8dp"

    android:layout_marginEnd="8dp">


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="preference number"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="@style/TextAppearance.AppCompat.Large"
        android:textSize="20sp">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subtextDay"
        android:text="Day"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textSize="20sp">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"

        android:layout_marginEnd="16dp"
        android:id="@+id/subtextTime"
        android:text="Time"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textSize="20sp">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subtextItemL1"
        android:layout_marginStart="16dp"

        android:layout_marginEnd="16dp"
        android:text="Light1"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textSize="20sp">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subtextItemL2"
        android:layout_marginStart="16dp"

        android:layout_marginEnd="16dp"
        android:text="Light2 "
        style="@style/TextAppearance.AppCompat.Medium"
        android:textSize="20sp">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subtextItemL3"
        android:layout_marginStart="16dp"

        android:layout_marginEnd="16dp"
        android:text="Light3"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textSize="20sp">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subtextItemL4"
        android:text="Light4"
        android:layout_marginStart="16dp"

        android:layout_marginEnd="16dp"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textSize="20sp">

    </TextView>

</LinearLayout>
</android.support.v7.widget.CardView>